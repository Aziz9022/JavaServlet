<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>p1.UpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>p1.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>p1.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountServlet</servlet-name>
        <servlet-class>p1.CountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AvgServlet</servlet-name>
        <servlet-class>p1.AvgServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeptServlet</servlet-name>
        <servlet-class>p1.DeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/DeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CountServlet</servlet-name>
        <url-pattern>/CountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AvgServlet</servlet-name>
        <url-pattern>/AvgServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeptServlet</servlet-name>
        <url-pattern>/DeptServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
